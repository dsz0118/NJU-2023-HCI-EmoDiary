<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:text="20220500"/>

        <View
            android:id="@+id/interval"
            android:layout_toRightOf="@+id/startDate"
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/interval"
            android:layout_marginLeft="10dp"
            android:text="20220620"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:gravity="center">
        <Button
            android:id="@+id/checkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:textSize="20dp"
            android:text="查询" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/check">
        <com.lihang.chart.view.ChartCircleView
            android:id="@+id/cv_circle"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cv_textColor="@color/black"
            app:cv_background="@color/grey_2"
            />

        <com.lihang.chart.view.ChartHistogramView
            android:layout_below="@+id/cv_circle"
            android:id="@+id/cv_hg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:ch_background="@color/grey_2" />
    </RelativeLayout>




</RelativeLayout>